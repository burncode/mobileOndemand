page{
  background-color: #EDEDED;
  height: 100%;
  width: 100%;
}
.remoteControl{
  background-color: #EDEDED;
  display: flex;
  flex-direction:column;
  height: 100%;
  width: 100%;
}
.pageTop{
  margin: 0.5rem;
  display: flex;
  flex-direction:row;
  justify-content:space-between;
  align-items:center;
}
.pageButton{
  margin: 0.5rem;
  height: 50%;
  width: 100%;
  position: relative;
}
.digitButton{
  margin: 0.5rem;
  position: relative;
  height: 50%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
}
.digitButtonEach{
  width: 30%;
  height: 20%;
  display: flex;
  justify-content: center;
}
.numberEach{
  width: 2.7rem;
  height:2.7rem;
  background-color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 100%;
  font-size: 1rem;
}
.topandBottom{
  position: absolute;
  top: 50%;
  left: 50%;	
  transform: translate(-50%,-50%);
  width:8rem;
  height:14rem;
  display: flex; 
  flex-direction: column;
  align-items: center;
  justify-content:space-between;
}
.leftandRight{
  position: absolute;
  top: 50%;
  left: 50%;	
  transform: translate(-50%,-50%);
  width:14rem;
  height:8rem;
  display: flex; 
  flex-direction: row;
  align-items: center;
  justify-content:space-between;
}
.quartercircle{
  position:relative; 
  width: 6rem;
  height: 6rem;
  -webkit-border-radius: 6rem 0 0 0;
  border-radius: 6rem 0 0 0;
  background: #fff;
  border: #f0f0f0 solid 0.05rem;
  font-size: 1rem;
}
.divLeft{
  transform:rotate(-45deg);
}
.divTop{
  transform:rotate(45deg);
}
.divRight{
  transform:rotate(135deg);
}
.divBottom{
  transform:rotate(-135deg);
}
/*  */
.quartercircle a{
  width: 1rem;
  height: 1rem;
  display: block;
  color: #000;
  border-top: 0.5rem solid transparent;
  border-right: 0.5rem solid transparent;
  border-bottom: 0.5rem solid #000;
  border-left: 0.5rem solid transparent;
  position: absolute;
  top: 2.5rem;
  left:2.5rem;
  box-sizing: border-box;
  transform:rotate(-45deg);
}
.circle:active,.quartercircle:active{
  background: #ff8c00;
}
.circle:active span{
  color: #fff;
}
.numberEach:active{
  background-color: #ff8c00;
  color: white;
}
.quartercircle:active a{
    border-top: 0.5rem solid transparent;
    border-right: 0.5rem solid transparent;
    border-bottom: 0.5rem solid #fff;
    border-left: 0.5rem solid transparent;
}
.circleRect{
  width: 6rem;
  height: 6rem;
  position: absolute;
  top: 50%;
  left: 50%;	
  transform: translate(-50%,-50%);  
}
.circle{
  width:100%;
  height:100%;
  position: absolute;
  z-index: 100;
  top:0.5%;
  left:0%;
  bottom:0;
  right: 0;
  margin:auto;
  border-radius: 100%;
  background-color: #f0f0f0;
  text-align: center; 
}
.circle span{
  width: 100%;
  height: 100%;
  line-height: 5.5rem;
  font-size: 1.3rem;
  display: flex;
  justify-content: center; 
  align-items:center;
}
.chooseOption{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin: 0.5rem;
}
.chooseUse{
  display: flex;
  flex-direction: row;
  height: 2rem;
  width: 8rem;
  background-color: white;
  border-radius: 2rem;
}
.pressKey{
  height: 100%;
  width: 50%;
  background-color: white;
  display: flex;
  justify-content: center;
  align-items:center;
  border-radius: 2rem;
}
.pressKeySelect{
  height: 100%;
  width: 50%;
  display: flex;
  justify-content: center;
  align-items:center;
  border-radius: 2rem;
  background-color: #ff8c00;
  color: white;
}
.digit{
  height: 100%;
  width: 50%;
  background-color: white;
  display: flex;
  justify-content: center;
  align-items:center;
  border-radius: 2rem;
}
.digitSelect{
  height: 100%;
  width: 50%;
  display: flex;
  justify-content: center;
  align-items:center;
  border-radius: 2rem;
  background-color: #ff8c00;
  color: white;
}
.changeVolume{
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin: 2rem;
}
.reduceRect{
  display: flex;
  justify-content: center;
  align-items:center;
  width: 5rem;
  height: 2rem;
  position: relative;
  border-top-left-radius: 2rem;
  border-bottom-left-radius: 2rem;
  background-color: white;
  margin-right:0.05rem; 
}
.volumeRect{
  display: flex;
  justify-content: center;
  align-items:center;
  width: 5rem;
  height: 2rem;
  position: relative;
  background-color: white;
}
.addRect{
  display: flex;
  justify-content: center;
  align-items:center;
  width: 5rem;
  height: 2rem;
  position: relative;
  border-top-right-radius: 2rem;
  border-bottom-right-radius: 2rem;
  background-color: white;
  margin-left: 0.05rem;
}
.reduceRect:active{
  background-color: #ff8c00;
}
.volumeRect:active{
  background-color: #ff8c00;
}
.addRect:active{
  background-color: #ff8c00;
}
.volume{
  width: 1.5rem;
  height: 1.5rem;
}
.volumeOff{
  width: 1.5rem;
  height: 1.5rem;
}
