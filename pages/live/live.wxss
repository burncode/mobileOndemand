page{
  background-color: white;
  height: 100%;
  width: 100%;
}
.live{
  background-color: white;
  display: flex;
  flex-direction:column;
  height: 100%;
  width: 100%;
  overflow: hidden;
}
.searchRect{
  width: 100%;
  height: 10%;
  background-color: white;
  display: flex;
  flex-direction: row;
  justify-content:center;
  align-items:center;
  border-bottom:1px solid #EDEDED;
}
.search{
  width: 90%;
  height: 50%;
  background-color: #EDEDED;
  display: flex;
  flex-direction: row;
  align-items:center;
  border-radius:0.5rem;
  padding-left: 2%;
}
.searchIcon{
  position: relative;
  left: 0.3rem;
  top:0.2rem;
}
.searchInput{
  margin-left: 3%;
}

.program{
  display: flex;
  flex-direction:column;
  height: 90%;
  width: 100%;
  position: relative;
}
.channelList{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  padding-top: 0.3rem;
  padding-bottom: 0.3rem;
  border-bottom:1px solid #EDEDED;
}
.channelSelect{
  color: #FF8C00;
  padding-bottom: 0.5rem;
  width: 100%;
}

.weekdayList{
  display: flex;
  flex-direction: column;
  border-bottom:1px solid #EDEDED;
}
.weekDaysList,.weekDateList{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  font-size: 0.8rem;
  line-height: 1.5rem;  
}
.weekDays,.weekDate{
  text-align: center;
  width: 100%;
  height: 100%;
} 
.weekDateSelect,.weekDaySelect{
  background-color: #F5F5F5;
  width: 100%;
  color: #FF8C00;
}
.someProgram{
  display: flex;
  flex-direction: row;
  height: 100%;
  width: 100%;
  position:relative;
}
.TVStationList{
  display: flex;
  flex-direction: column;
  overflow-y: scroll;
  bottom: 0px;
  height: 100%;
  width: 30%;
}
.programList{
  display: flex;
  flex-direction: column;
  
  overflow-y: scroll;
  bottom: 0px;
  height: 100%;
  width: 70%;
  padding: 0.5rem;
}
.TVStationSelect{
  background-color: #F5F5F5;
  font-size: 30rpx;
  border-bottom:1px solid #EDEDED;
  padding-top: 2rpx;
  padding-bottom: 2rpx;
  text-align:center;
  border-right: 20rpx solid #F5F5F5;
}
.TVStationNot{
  font-size: 30rpx;
  border-bottom:1px solid #EDEDED;
  padding-top: 2rpx;
  padding-bottom: 2rpx;
  text-align:center;
  border-right: 20rpx solid #F5F5F5;
}
image{
  width: 80rpx;
  height: 80rpx;
}
.programSelect{
  margin-bottom: 0.5rem;
  height: 100px;
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-shrink: 0;
}
.programTime{
  font-size: 25rpx;
  width: 50%;
}
.programMess{
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 50%;
}
.programName{
  font-size: 35rpx;  
  white-space:nowrap;
  overflow: hidden;
  text-overflow:ellipsis;
}
.timeSlide{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 10rpx;
}
.timeLine{
  border-right: 2rpx solid black;
  height: 100%;
  width: 2rpx;
}