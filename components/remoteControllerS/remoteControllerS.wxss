page{
  background-color: #EDEDED;
  height: 100%;
  width: 100%;
}

.remoteControlS{
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.remoteBotton{
  position: fixed ; 
  width: 100rpx;
  height: 100rpx;
  background-color: #ff8c00;
  border-radius: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  opacity:0.5;
  pointer-events: auto;
}
.remoteBotton:active{
  opacity: 1.0;
}

.remoteControl{
  background-color: white;
  display: flex;
  flex-direction:column;
  justify-content: center;
  height: 60%;
  width: 65%;
  margin: auto;       /*用于设置组件居中*/
  left:0; 
  right:0;
  border-radius:100rpx; 
  position: fixed;
  opacity:0.9;
  pointer-events: auto;
}
.pageTop{
  display: flex;
  flex-direction:row;
  justify-content:space-around;
  align-items:center;
  height: 20%;
  width: 100%;
}

.pageButton{
  height: 50%;
  width: 100%;
  position: relative;
}
.topandBottom{
  position: absolute;
  top: 50%;
  left: 50%;	
  transform: translate(-50%,-50%);
  width:6rem;
  height:12rem;
  display: flex; 
  flex-direction: column;
  align-items: center;
  justify-content:space-between;
}
.leftandRight{
  position: absolute;
  top: 50%;
  left: 50%;	
  transform: translate(-50%,-50%);
  width:12rem;
  height:6rem;
  display: flex; 
  flex-direction: row;
  align-items: center;
  justify-content:space-between;
}
.quartercircle{
  position:relative; 
  width: 5rem;
  height: 5rem;
  -webkit-border-radius: 6rem 0 0 0;
  border-radius: 6rem 0 0 0;
  background: #fff;
  border: #f0f0f0 solid 0.05rem;
  font-size: 1rem;
}
.divLeft{
  transform:rotate(-45deg);
}
.divTop{
  transform:rotate(45deg);
}
.divRight{
  transform:rotate(135deg);
}
.divBottom{
  transform:rotate(-135deg);
}
/*  */
.quartercircle a{
  width: 1rem;
  height: 1rem;
  display: block;
  color: #000;
  border-top: 0.5rem solid transparent;
  border-right: 0.5rem solid transparent;
  border-bottom: 0.5rem solid #000;
  border-left: 0.5rem solid transparent;
  position: absolute;
  top: 2.5rem;
  left:2.5rem;
  box-sizing: border-box;
  transform:rotate(-45deg);
}
.circle:active,.quartercircle:active{
  background: #ff8c00;
}
.circle:active span{
  color: #fff;
}

.quartercircle:active a{
  border-top: 0.5rem solid transparent;
  border-right: 0.5rem solid transparent;
  border-bottom: 0.5rem solid #fff;
  border-left: 0.5rem solid transparent;
}
.circleRect{
  width: 4rem;
  height: 4rem;
  position: absolute;
  top: 50%;
  left: 50%;	
  transform: translate(-50%,-50%);  
}
.circle{
  width:100%;
  height:100%;
  position: absolute;
  z-index: 100;
  top:0.5%;
  left:0%;
  bottom:0;
  right: 0;
  margin:auto;
  border-radius: 100%;
  background-color: white;
  text-align: center; 
  border:1rpx solid #EDEDED;
}
.circle span{
  width: 100%;
  height: 100%;
  line-height: 5.5rem;
  font-size: 1.3rem;
  display: flex;
  justify-content: center; 
  align-items:center;
}

.pageBottom{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  height: 20%;
  width: 100%;
  align-items: center;
}
